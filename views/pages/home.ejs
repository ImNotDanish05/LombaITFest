        /* Feature sections */
        .feature-section {
            margin-bottom: 2rem;
            padding: 1.5rem;
            background: rgba(255, 255, 255, 0.7);
            border-radius: 15px;
            border-left: 4px solid #667eea;
            animation: slideInFromBottom 1s ease-out 0.4s both;
        }

        .feature-section:nth-child(even) {
            animation-delay: 0.6s;
        }

        .feature-title {
