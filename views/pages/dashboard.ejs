<!DOCTYPE html>
<html>
<head>
  <title>Dashboard</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Poppins', sans-serif;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
      overflow-x: hidden;
      color: white;
    }

    header {
      background-color: #0f172a;
      padding: 1rem 2rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .brand {
      font-weight: bold;
      font-size: 1.3rem;
      color: white;
    }

    .sidebar {
      position: fixed;
      top: 0;
      left: 0;
      height: 100%;
      width: 250px;
      background-color: #0f172a;
      color: white;
      padding: 2rem 1rem;
      transform: translateX(-100%);
      transition: transform 0.3s ease;
      z-index: 1050;
    }

    .sidebar.active {
      transform: translateX(0);
    }

    .sidebar h5 {
      margin-bottom: 2rem;
    }

    .sidebar a {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      color: white;
      text-decoration: none;
      padding: 0.5rem 0;
      transition: all 0.2s ease;
    }

    .sidebar a:hover {
      color: #facc15;
    }

    .welcome-card {
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(15px);
      border-radius: 20px;
      padding: 3rem;
      max-width: 600px;
      width: 90%;
      box-shadow: 0 8px 32px rgba(0,0,0,0.3);
      animation: fadeInUp 0.8s ease-out;
      margin: 5rem auto;
      text-align: center;
    }

    .welcome-text {
      font-size: 2.5rem;
      font-weight: 700;
      background: linear-gradient(45deg, #fff, #f0f0f0);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      margin-bottom: 1.5rem;
    }

    .profile-img {
      width: 120px;
      height: 120px;
      border-radius: 50%;
      border: 4px solid rgba(255, 255, 255, 0.3);
      margin-bottom: 1rem;
    }

    .email-text {
      font-size: 1.1rem;
      margin-bottom: 2rem;
    }

    .close-btn {
      position: absolute;
      top: 1rem;
      right: 1rem;
      color: white;
      background: transparent;
      border: none;
      font-size: 1.2rem;
    }

    @keyframes fadeInUp {
      from { opacity: 0; transform: translateY(50px); }
      to { opacity: 1; transform: translateY(0); }
    }

    hr {
      border-color: rgba(255, 255, 255, 0.2);
    }

    .text-danger-area {
      font-size: 0.8rem;
      color: #ff4d4d;
      font-weight: bold;
      margin-top: 2rem;
    }
  </style>
</head>
<body>

  <!-- Header -->
  <header>
    <div class="d-flex align-items-center">
      <button id="toggleSidebar" class="btn btn-sm text-white me-3">
        <i class="bi bi-list"></i>
      </button>
      <span class="brand">YTJudolRemover</span>
    </div>
    <img src="<%= user.picture %>" class="rounded-circle" width="40" height="40">
  </header>

  <!-- Sidebar -->
  <div id="sidebar" class="sidebar">
    <button id="closeSidebar" class="close-btn"><i class="bi bi-x-lg"></i></button>
    <h5>Menu</h5>
    <a href="/dashboard"><i class="bi bi-speedometer2"></i> Dashboard</a>
    <a href="/judolremover"><i class="bi bi-youtube"></i> Judol Remover</a>
    <hr />
    <div class="text-danger-area">DANGEROUS AREA</div>
    <a href="/delete-account" class="text-danger"><i class="bi bi-trash"></i> Delete Account</a>
  </div>

  <!-- Main Content -->
  <div class="welcome-card">
    <h1 class="welcome-text">
      <i class="bi bi-check-circle-fill"></i> Selamat datang, <%= user.name.split(' ')[0] %>!
    </h1>
    <img src="<%= user.picture %>" alt="Foto Profil" class="profile-img">
    <p class="email-text"><strong>Email:</strong> <%= user.email %></p>
  </div>

  <!-- Script -->
  <script>
    const sidebar = document.getElementById('sidebar');
    const toggleBtn = document.getElementById('toggleSidebar');
    const closeBtn = document.getElementById('closeSidebar');

    toggleBtn.addEventListener('click', () => {
      sidebar.classList.add('active');
    });

    closeBtn.addEventListener('click', () => {
      sidebar.classList.remove('active');
    });
  </script>

</body>
</html>
