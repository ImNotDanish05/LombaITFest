<%- include('../partials/headerlogin', { user }) %>

<!-- Font & Bootstrap Icons -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">

<style>
  /* 1. Background Animated Gradient */
  body {
    background: linear-gradient(135deg, #1a1a2e, #16213e, #0f3460, #2e5e8e);
    background-size: 400% 400%;
    animation: animated-gradient 15s ease infinite;
    font-family: 'Poppins', sans-serif;
  }

  @keyframes animated-gradient {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }

  /* 2. Card */
  .glass-card {
    background: rgba(255, 255, 255, 0.08);
    backdrop-filter: blur(12px);
    border-radius: 25px;
    border: 1px solid rgba(255, 255, 255, 0.15);
    box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.37);
    color: white;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .glass-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 16px 40px 0 rgba(0, 0, 0, 0.45);
  }

  /* 3. Animation */
  .animate-fade-in {
    animation: fadeInUp 0.8s ease-out forwards;
    opacity: 0;
  }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* 4. Profile Image */
  .profile-img-container {
    display: inline-block;
    padding: 5px;
    background: linear-gradient(45deg, #e94560, #7f5af0);
    border-radius: 50%;
    margin-bottom: 1.5rem;
  }

  .profile-img {
    width: 100px;
    height: 100px;
    object-fit: cover;
    border-radius: 50%;
    border: 3px solid #1a1a2e;
  }

  /* 5. Text Styling */
  .welcome-text {
    font-weight: 600;
    font-size: 2rem;
    color: #f0f0f0;
  }

  .typing-animation {
    display: inline-block;
    animation: typing 2s steps(25, end), blink .75s step-end infinite;
    white-space: nowrap;
    overflow: hidden;
    border-right: .15em solid #7f5af0;
    max-width: 100%;
  }

  @keyframes typing {
    from { width: 0 }
    to { width: 100% }
  }

  @keyframes blink {
    from, to { border-color: transparent }
    50% { border-color: #7f5af0; }
  }

  .email-text {
    background: rgba(0, 0, 0, 0.2);
    padding: 8px 15px;
    border-radius: 15px;
    font-size: 0.9rem;
    display: inline-flex;
    align-items: center;
    gap: 8px;
    color: #c0c0c0;
  }

  /* 6. Button */
  .btn-custom-action {
    background: linear-gradient(45deg, #7f5af0, #e94560);
    border: none;
    border-radius: 12px;
    color: white;
    font-weight: 500;
    padding: 12px 25px;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
  }

  .btn-custom-action:hover {
    transform: scale(1.05);
    box-shadow: 0 6px 20px rgba(233, 69, 96, 0.4);
  }

  /* 7. Comments Section */
  .comments-section {
    width: 100%;
    max-width: 700px;
  }

  .spam-alert {
    background: rgba(217, 83, 79, 0.2);
    border: 1px solid rgba(217, 83, 79, 0.5);
    color: white;
    border-radius: 15px;
  }
</style>

<!-- Content Start -->
<div class="container py-5 d-flex flex-column align-items-center justify-content-center min-vh-100">
  <div class="glass-card text-center animate-fade-in p-4 p-md-5" style="transform: translateY(20px);">
    <div class="profile-img-container shadow-lg">
      <img src="<%= user.picture || '/images/default-profile.png' %>" class="profile-img" alt="Foto Profil">
    </div>

    <h2 class="welcome-text mb-3">
      <span class="typing-animation">Welcome, <%= user.name.split(' ')[0] %>!</span>
    </h2>

    <p class="email-text mb-4">
      <i class="bi bi-envelope-fill"></i>
      <span><%= user.email %></span>
    </p>

    <div class="d-grid">
      <a href="/judolremover" class="btn btn-custom-action btn-lg shadow-sm">
        <i class="bi bi-youtube me-2"></i> Fetch YouTube Comments
      </a>
    </div>
  </div>

  <% if (typeof comments !== 'undefined' && comments.length > 0) { %>
    <div class="comments-section mt-5 animate-fade-in">
      <div class="glass-card p-4">
        <h4 class="text-white mb-3 text-center">Comments List</h4>
        <div class="spam-alert alert text-center">
          ðŸš¨ <strong><%= comments.length %></strong> spam comments found
        </div>
      </div>
    </div>
  <% } %>
</div>
<!-- Content End -->

<%- include('../partials/footer') %>
