<%- include('../partials/headerlogin', { user }) %>
<div class="container py-5">
  <div class="glass-card text-center">
    <h2 class="welcome-text">
      <i class="bi bi-youtube"></i> Masukkan Link YouTube
    </h2>
    <form action="/get-comments" method="POST" class="form-container mt-4">
      <div class="mb-3">
        <input type="url" name="youtubeUrl" class="form-control" placeholder="Masukkan link YouTube" required>
      </div>
      <div class="form-check mb-3 text-start">
        <input class="form-check-input" type="checkbox" name="useAiJudol" value="1" id="useAiJudol">
        <label class="form-check-label checkbox-label" for="useAiJudol"> Gunakan AI Judol Detector </label>
      </div>
      <button type="submit" class="submit-btn">
        <i class="bi bi-search"></i> Dapatkan Komentar
      </button>
    </form>
  </div>
</div>
<%- include('../partials/footer') %>
