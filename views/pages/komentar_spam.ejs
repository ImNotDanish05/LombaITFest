<!DOCTYPE html>
<html>
<head>
  <title>Komentar Spam - <%= videoTitle %></title>
  <%- include('../partials/headerlogin', { user }) %>
  <style>
    body {
      background: linear-gradient(135deg, #1a1a2e, #16213e, #0f3460, #2e5e8e);
      background-size: 400% 400%;
      animation: animated-gradient 15s ease infinite;
      font-family: 'Poppins', sans-serif;
      color: white;
      margin: 0;
      padding: 0;
    }
    @keyframes animated-gradient {
      0% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
      100% { background-position: 0% 50%; }
    }
    .container-flex {
      min-height: 100vh;
      display: flex;
      align-items: flex-start;
      justify-content: center;
      padding: 2rem 1.5rem 4rem;
      box-sizing: border-box;
    }
    .glass-card {
      width: 100%;
      max-width: 900px;
      background: rgba(255, 255, 255, 0.08);
      backdrop-filter: blur(12px);
      border-radius: 25px;
      border: 1px solid rgba(255, 255, 255, 0.15);
      box-shadow: 0 8px 32px rgba(0, 201, 167, 0.35), 0 0 20px rgba(58, 134, 255, 0.3);
      color: white;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      padding: 2.2rem 2.4rem;
      box-sizing: border-box;
    }
    .glass-card:hover {
      transform: translateY(-6px);
      box-shadow: 0 16px 40px rgba(58, 134, 255, 0.45), 0 0 30px rgba(0, 201, 167, 0.35);
    }
    h1 {
      font-size: 1.9rem;
      margin: 0 0 1rem;
      text-align: center;
      line-height: 1.3;
    }
    h1 span {
      font-weight: 600;
      color: #4fe3ff;
    }
    .sub-head {
      text-align: center;
      font-size: .9rem;
      opacity: .85;
      margin-bottom: 1.5rem;
    }
    .stats-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
      gap: 0.9rem;
      margin-bottom: 1.4rem;
    }
    .stat-box {
      background: rgba(255,255,255,0.09);
      padding: .9rem .85rem;
      border-radius: 16px;
      text-align: center;
      font-size: .85rem;
      position: relative;
      overflow: hidden;
    }
    .stat-box b { display:block; font-size: 1.05rem; margin-bottom: .25rem; }
    .warning {
      color: #ffcc00;
      font-weight: 600;
      margin: 0 0 14px;
      padding: 10px 14px;
      background: rgba(255,204,0,0.12);
      border: 1px solid rgba(255,204,0,0.35);
      border-radius: 10px;
      font-size: .85rem;
    }
    ul.comment-list {
      list-style: none;
      padding: 0;
      margin: 0 0 1.5rem;
      max-height: 380px;
      overflow-y: auto;
      scrollbar-width: thin;
    }
    ul.comment-list::-webkit-scrollbar {
      width: 8px;
    }
    ul.comment-list::-webkit-scrollbar-track {
      background: rgba(255,255,255,0.08);
      border-radius: 8px;
    }
    ul.comment-list::-webkit-scrollbar-thumb {
      background: linear-gradient(180deg,#4fe3ff,#2e5e8e);
      border-radius: 8px;
    }
    li.comment-item {
      background: rgba(255,255,255,0.05);
      padding: .75rem .9rem .85rem;
      border-radius: 14px;
      margin-bottom: .65rem;
      line-height: 1.35;
      position: relative;
      display: flex;
      gap: .65rem;
    }
    li.comment-item:hover {
      background: rgba(255,255,255,0.08);
    }
    .comment-meta {
      font-size: .7rem;
      opacity: .65;
      margin-top: 2px;
    }
    .author {
      font-weight: 600;
      color: #4fe3ff;
      margin-right: 4px;
    }
    .badge {
      display: inline-block;
      font-size: .55rem;
      letter-spacing: .7px;
      padding: 3px 7px 2px;
      border-radius: 999px;
      background: linear-gradient(120deg,#ff8a00,#ff0055);
      font-weight: 600;
      margin-left: 6px;
    }
    .badge-ai { background: linear-gradient(120deg,#00d2ff,#3a47d5); }
    .badge-manual { background: linear-gradient(120deg,#ff512f,#dd2476); }
    .select-col {
      padding-top: 4px;
    }
    .select-col input {
      transform: scale(1.2);
      cursor: pointer;
    }
    .controls-top {
      display: flex;
      flex-wrap: wrap;
      gap: .9rem;
      align-items: center;
      justify-content: space-between;
      margin-bottom: .9rem;
      font-size: .77rem;
    }
    .controls-top label {
      cursor: pointer;
      user-select: none;
      display: flex;
      align-items: center;
      gap: .45rem;
      font-weight: 500;
    }
    .action-bar {
      display: flex;
      flex-wrap: wrap;
      gap: .75rem;
      justify-content: center;
      margin-top: .5rem;
    }
    .btn-action {
      background: linear-gradient(120deg,#FF1E1E,#9F0000,#00000033,#9F0000,#FF1E1E);
      background-size: 300% 100%;
      animation: animate-bg 5s ease infinite;
      border: none;
      border-radius: 12px;
      color: white;
      font-weight: 500;
      padding: 11px 20px;
      cursor: pointer;
      transition: all .25s ease;
      font-size: .8rem;
      letter-spacing: .5px;
      min-width: 140px;
      position: relative;
    }
    .btn-action.secondary {
      background: linear-gradient(120deg,#2b5876,#4e4376);
    }
    .btn-action.spam {
      background: linear-gradient(120deg,#ff8a00,#e52e71);
    }
    .btn-action:disabled {
      opacity: .35;
      cursor: not-allowed;
      filter: grayscale(.4);
    }
    .btn-action:hover:not(:disabled) {
      transform: translateY(-3px) scale(1.02);
      box-shadow: 0 6px 20px rgba(0,0,0,.35);
    }
    @keyframes animate-bg {
      0% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
      100% { background-position: 0% 50%; }
    }
    .footer-info {
      text-align: center;
      opacity: .6;
      font-size: .65rem;
      margin-top: 1.8rem;
    }
    .empty {
      text-align: center;
      padding: 2rem 1rem;
      font-size: .9rem;
      opacity: .8;
    }
    .selected-counter {
      text-align: center;
      font-size: .7rem;
      opacity: .7;
      margin-top: .25rem;
    }
    .filter-method {
      font-size: .65rem;
      display: inline-block;
      padding: 4px 10px 3px;
      border-radius: 20px;
      background: rgba(255,255,255,0.08);
      backdrop-filter: blur(6px);
      margin-left: 6px;
      font-weight: 500;
      letter-spacing: .5px;
    }
    .badge-combo {
      background: linear-gradient(120deg, #ff512f, #00c6ff); /* warna basic + gemini */
      color: white;
      padding: 3px 7px 2px;
      border-radius: 999px;
      font-size: .55rem;
      font-weight: 600;
      letter-spacing: .7px;
      display: inline-block;
      margin-left: 6px;
    }

    .filter-method.ai { background: linear-gradient(120deg,#00c6ff,#0072ff); }
    .filter-method.manual { background: linear-gradient(120deg,#ff416c,#ff4b2b); }
  </style>
</head>
<body>
  <div class="container-flex">
    <div class="glass-card">

      <h1>
        üö® Ditemukan <span><%= comments.length %></span> Komentar Spam
      </h1>
      <div class="sub-head">
        Video: <strong><%= videoTitle %></strong>
        <% if (useAi) { %>
          <span class="badge-combo">Basic + Gemini Filter</span>
        <% } else { %>
          <span class="filter-method manual">Basic AI Filter</span>
        <% } %>
      </div>

      <div class="stats-grid">
        <div class="stat-box">
          <b><%= stats.total %></b>Total Komentar
        </div>
        <div class="stat-box">
          <b><%= stats.spam %></b>Spam Terfilter
        </div>
        <div class="stat-box">
          <b><%= stats.ratio %>%</b>Rasio Spam
        </div>
        <div class="stat-box">
          <b><%= useAi ? 'Gemini AI' : 'Basic AI' %></b>Mode
        </div>
        <div class="stat-box">
          <b><%= isOwner ? 'Ya' : 'Tidak' %></b>Pemilik Video
        </div>
      </div>

      <% if (!isOwner) { %>
        <div class="warning">
          ‚ö†Ô∏è Kamu bukan pemilik video ini. Komentar hanya akan dilaporkan sebagai spam ke <strong>YouTube</strong> (tidak langsung menghapus di YouTube).
        </div>
      <% } else { %>
        <div class="warning" style="background:rgba(79,227,255,0.10);border-color:rgba(79,227,255,0.35);color:#9be6ff;">
          ‚úÖ Kamu pemilik video. Kamu bisa: Hapus Permanen / Tolak / Tandai Spam.
        </div>
      <% } %>

      <% if (comments.length === 0) { %>
        <div class="empty">Tidak ada komentar spam yang terdeteksi.</div>
      <% } else { %>

      <form id="moderateForm" method="POST" action="/youtube/moderate-comments">
        <input type="hidden" name="videoId" value="<%= videoId %>">

        <div class="controls-top">
          <label>
            <input type="checkbox" id="selectAll">
            <span>Pilih Semua</span>
          </label>
          <div>
            <span id="selectedCount">0 dipilih</span>
          </div>
        </div>

        <ul class="comment-list">
          <% comments.forEach(function(comment){ %>
            <li class="comment-item">
              <div class="select-col">
                <input type="checkbox" class="comment-checkbox" name="ids" value="<%= comment.commentId %>">
              </div>
              <div class="content-col">
                <div>
                  <span class="author"><%= comment.author || 'Anon' %></span>
                  <% if (comment.flaggedBy) { %>
                    <span class="badge <%= comment.flaggedBy === 'Gemini AI' ? 'badge-ai' : 'badge-manual' %>">
                      <%= comment.flaggedBy %>
                    </span>
                  <% } %>
                </div>
                <div class="comment-text"><%= comment.text %></div>
                <div class="comment-meta">
                  ID: <%= comment.commentId %>
                </div>
              </div>
            </li>
          <% }) %>
        </ul>

        <div class="action-bar">
          <% if (isOwner) { %>
            <button type="submit" name="action" value="delete" class="btn-action" disabled id="btnDelete">
              Hapus Permanen
            </button>
            <button type="submit" name="action" value="reject" class="btn-action secondary" disabled id="btnReject">
              Tolak (Hide)
            </button>
            <button type="submit" name="action" value="spam" class="btn-action spam" disabled id="btnSpam">
              Tandai Spam
            </button>
          <% } else { %>
            <button type="submit" name="action" value="report" class="btn-action" disabled id="btnReport">
              Laporkan ke Pemilik
            </button>
          <% } %>
        </div>
        <div class="selected-counter" id="selectedCounterInfo">
          0 komentar dipilih.
        </div>
      </form>

      <% } %>

      <div class="footer-info">
        Sistem filter: <%= useAi ? 'AI (Gemini Batch)' : 'Heuristik Manual' %>.
        Waktu render: <%= new Date().toLocaleTimeString() %>
      </div>
    </div>
  </div>

  <script>
    const selectAll = document.getElementById('selectAll');
    const form = document.getElementById('moderateForm');
    const checkboxes = document.querySelectorAll('.comment-checkbox');
    const actionButtons = document.querySelectorAll('.btn-action');
    const selectedCountSpan = document.getElementById('selectedCount');
    const selectedCounterInfo = document.getElementById('selectedCounterInfo');

    function updateSelectionState() {
      const selected = document.querySelectorAll('.comment-checkbox:checked').length;
      const total = checkboxes.length;
      actionButtons.forEach(btn => { btn.disabled = selected === 0; });
      selectedCountSpan.textContent = selected + ' dipilih';
      selectedCounterInfo.textContent = selected + ' komentar dipilih.';
      if (selected === total && total > 0) {
        selectAll.checked = true;
        selectAll.indeterminate = false;
      } else if (selected === 0) {
        selectAll.checked = false;
        selectAll.indeterminate = false;
      } else {
        selectAll.indeterminate = true;
      }
    }

    if (selectAll) {
      selectAll.addEventListener('change', () => {
        const checked = selectAll.checked;
        checkboxes.forEach(cb => cb.checked = checked);
        updateSelectionState();
      });
    }

    checkboxes.forEach(cb => {
      cb.addEventListener('change', updateSelectionState);
    });

    if (form) {
      form.addEventListener('submit', (e) => {
        const selected = document.querySelectorAll('.comment-checkbox:checked').length;
        if (selected === 0) {
          e.preventDefault();
          alert('Pilih minimal satu komentar terlebih dahulu.');
          return;
        }
        // (Optional) konfirmasi tambahan untuk pemilik yang menghapus permanen
        const submitter = e.submitter;
        if (submitter && submitter.value === 'delete') {
          if (!confirm('Yakin ingin hapus permanen komentar terpilih? Tindakan ini tidak dapat dibatalkan.')) {
            e.preventDefault();
          }
        }
      });
    }

    updateSelectionState();
  </script>

  <%- include('../partials/footer') %>
</body>
</html>
