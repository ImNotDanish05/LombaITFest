<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Login - Judol App</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">

  <!-- Favicon -->
  <link rel="icon" type="image/png" href="/images/logo_CodeNova.png">

  <style>
    body {
      font-family: 'Inter', sans-serif;
      background: linear-gradient(135deg, #0f2027, #203a43, #2c5364);
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      overflow-x: hidden;
      position: relative;
    }

    /* Animated background particles */
    .particles {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      pointer-events: none;
      z-index: 0;
    }

    .particle {
      position: absolute;
      width: 6px;
      height: 6px;
      background: rgba(255, 255, 255, 0.1);
      border-radius: 50%;
      animation: float 8s infinite ease-in-out;
    }

    .particle:nth-child(odd) {
      animation-direction: reverse;
    }

    @keyframes float {
      0%, 100% { 
        transform: translateY(0px) rotate(0deg);
        opacity: 0.3;
      }
      50% { 
        transform: translateY(-30px) rotate(180deg);
        opacity: 0.8;
      }
    }

    /* Login box animations */
    .login-box {
      max-width: 450px;
      margin: auto;
      padding: 40px;
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(10px);
      border-radius: 20px;
      box-shadow: 0 20px 60px rgba(0, 0, 0, 0.2);
      border: 1px solid rgba(255, 255, 255, 0.2);
      position: relative;
      z-index: 10;
      animation: slideInUp 0.8s ease-out;
    }

    .login-box::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: linear-gradient(135deg, rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0.05));
      border-radius: 20px;
      z-index: -1;
    }

    @keyframes slideInUp {
      from {
        opacity: 0;
        transform: translateY(50px) scale(0.9);
      }
      to {
        opacity: 1;
        transform: translateY(0) scale(1);
      }
    }

    .login-box h1 {
      font-weight: 700;
      margin-bottom: 30px;
      background: linear-gradient(135deg, #0f2027, #203a43);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      animation: fadeInDown 1s ease-out 0.3s both;
      position: relative;
    }

    .login-box h1::after {
      content: '';
      position: absolute;
      bottom: -10px;
      left: 50%;
      transform: translateX(-50%);
      width: 60px;
      height: 3px;
      background: linear-gradient(135deg, #0f2027, #203a43);
      border-radius: 2px;
      animation: expandWidth 0.8s ease-out 0.8s both;
    }

    @keyframes fadeInDown {
      from {
        opacity: 0;
        transform: translateY(-20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @keyframes expandWidth {
      from {
        width: 0;
      }
      to {
        width: 60px;
      }
    }

    /* Form elements animation */
    .form-check {
      animation: fadeInLeft 0.6s ease-out both;
      transition: all 0.3s ease;
    }

    .form-check:nth-child(1) { animation-delay: 0.6s; }
    .form-check:nth-child(2) { animation-delay: 0.8s; }

    .form-check:hover {
      transform: translateX(5px);
    }

    @keyframes fadeInLeft {
      from {
        opacity: 0;
        transform: translateX(-20px);
      }
      to {
        opacity: 1;
        transform: translateX(0);
      }
    }

    .form-check-input {
      transition: all 0.3s ease;
      cursor: pointer;
    }

    .form-check-input:checked {
      background-color: #0f2027;
      border-color: #0f2027;
      animation: checkPulse 0.3s ease;
    }

    @keyframes checkPulse {
      0% { transform: scale(1); }
      50% { transform: scale(1.1); }
      100% { transform: scale(1); }
    }

    .form-check-label {
      cursor: pointer;
      transition: color 0.3s ease;
    }

    .form-check-label:hover {
      color: #0f2027;
    }

    .form-check-label a {
      text-decoration: underline dotted;
      color: #203a43;
      transition: all 0.3s ease;
    }

    .form-check-label a:hover {
      color: #0f2027;
      text-decoration: underline solid;
    }

    /* Button animations */
    #loginButton {
      transition: all 0.4s ease;
      animation: fadeInUp 0.6s ease-out 1s both;
      position: relative;
      overflow: hidden;
      font-weight: 600;
      border: none;
      background: linear-gradient(135deg, #dc3545, #c82333);
      transform: translateY(0);
    }

    #loginButton::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
      transition: left 0.5s ease;
    }

    #loginButton:hover::before {
      left: 100%;
    }

    #loginButton:not(.disabled):hover {
      transform: translateY(-3px);
      box-shadow: 0 10px 30px rgba(220, 53, 69, 0.4);
    }

    #loginButton.disabled {
      cursor: not-allowed;
      opacity: 0.6;
      background: linear-gradient(135deg, #6c757d, #5a6268);
      animation: shake 0.5s ease-in-out;
    }

    @keyframes shake {
      0%, 100% { transform: translateX(0); }
      25% { transform: translateX(-5px); }
      75% { transform: translateX(5px); }
    }

    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    /* Google icon animation */
    .bi-google {
      animation: rotate 2s infinite linear;
      margin-right: 8px;
    }

    #loginButton:not(.disabled) .bi-google {
      animation: bounce 1s infinite;
    }

    @keyframes rotate {
      from { transform: rotate(0deg); }
      to { transform: rotate(360deg); }
    }

    @keyframes bounce {
      0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
      40% { transform: translateY(-3px); }
      60% { transform: translateY(-2px); }
    }

    /* Footer animation */
    footer {
      margin-top: auto;
      animation: fadeIn 1s ease-out 1.5s both;
    }

    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }

    /* Hover effects */
    .login-box:hover {
      transform: translateY(-5px);
      box-shadow: 0 30px 80px rgba(0, 0, 0, 0.3);
    }

    /* Success animation when both checkboxes are checked */
    .form-check.checked {
      animation: successPulse 0.5s ease;
    }

    @keyframes successPulse {
      0% { transform: scale(1); }
      50% { transform: scale(1.05); }
      100% { transform: scale(1); }
    }

    /* Loading animation for login button */
    #loginButton.loading {
      position: relative;
      color: transparent;
    }

    #loginButton.loading::after {
      content: '';
      position: absolute;
      top: 50%;
      left: 50%;
      width: 20px;
      height: 20px;
      margin: -10px 0 0 -10px;
      border: 2px solid #ffffff;
      border-top: 2px solid transparent;
      border-radius: 50%;
      animation: spin 1s linear infinite;
    }

    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }

    /* Responsive animations */
    @media (max-width: 768px) {
      .login-box {
        margin: 20px;
        padding: 30px;
        animation: slideInUp 0.6s ease-out;
      }
      
      .login-box h1 {
        font-size: 1.8rem;
      }
    }

    /* Floating elements */
    .floating-icon {
      position: absolute;
      font-size: 2rem;
      color: rgba(255, 255, 255, 0.1);
      animation: floatAround 10s infinite ease-in-out;
      z-index: 1;
    }

    .floating-icon:nth-child(1) {
      top: 10%;
      left: 10%;
      animation-delay: 0s;
    }

    .floating-icon:nth-child(2) {
      top: 20%;
      right: 15%;
      animation-delay: 2s;
    }

    .floating-icon:nth-child(3) {
      bottom: 30%;
      left: 20%;
      animation-delay: 4s;
    }

    .floating-icon:nth-child(4) {
      bottom: 20%;
      right: 10%;
      animation-delay: 6s;
    }

    @keyframes floatAround {
      0%, 100% { transform: translateY(0px) rotate(0deg); }
      25% { transform: translateY(-20px) rotate(90deg); }
      50% { transform: translateY(-10px) rotate(180deg); }
      75% { transform: translateY(-30px) rotate(270deg); }
    }
  </style>

  <script>
    function toggleButton() {
      const terms = document.getElementById('termsCheckbox').checked;
      const privacy = document.getElementById('privacyCheckbox').checked;
      const loginButton = document.getElementById('loginButton');
      const termsCheck = document.querySelector('#termsCheckbox').closest('.form-check');
      const privacyCheck = document.querySelector('#privacyCheckbox').closest('.form-check');

      // Add success animation to checked items
      if (terms) {
        termsCheck.classList.add('checked');
        setTimeout(() => termsCheck.classList.remove('checked'), 500);
      }
      if (privacy) {
        privacyCheck.classList.add('checked');
        setTimeout(() => privacyCheck.classList.remove('checked'), 500);
      }

      if (terms && privacy) {
        loginButton.classList.remove('disabled');
        loginButton.onclick = function(e) {
          e.preventDefault();
          loginButton.classList.add('loading');
          setTimeout(() => {
            window.location.href = loginButton.href;
          }, 1000);
        };
      } else {
        loginButton.classList.add('disabled');
        loginButton.onclick = function (e) {
          e.preventDefault();
        };
      }
    }

    // Create particles
    function createParticles() {
      const particlesContainer = document.querySelector('.particles');
      for (let i = 0; i < 20; i++) {
        const particle = document.createElement('div');
        particle.className = 'particle';
        particle.style.top = Math.random() * 100 + '%';
        particle.style.left = Math.random() * 100 + '%';
        particle.style.animationDelay = Math.random() * 8 + 's';
        particle.style.animationDuration = (Math.random() * 4 + 6) + 's';
        particlesContainer.appendChild(particle);
      }
    }

    window.onload = function() {
      toggleButton();
      createParticles();
    };
  </script>
</head>
<body>
  <!-- Animated background particles -->
  <div class="particles"></div>

  <!-- Floating decorative icons -->
  <div class="floating-icon"><i class="bi bi-shield-check"></i></div>
  <div class="floating-icon"><i class="bi bi-lock"></i></div>
  <div class="floating-icon"><i class="bi bi-star"></i></div>
  <div class="floating-icon"><i class="bi bi-heart"></i></div>

  <!-- Header -->
  <%- include('../partials/header') %>

  <div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="login-box text-center">
      <h1 class="mb-4">Login dengan Google</h1>

      <!-- Checkbox Terms -->
      <div class="form-check text-start mb-2">
        <input class="form-check-input" type="checkbox" id="termsCheckbox" onchange="toggleButton()">
        <label class="form-check-label" for="termsCheckbox">
          Saya menyetujui <a href="/TermsAndConditions" target="_blank">Terms & Conditions</a>
        </label>
      </div>

      <!-- Checkbox Privacy -->
      <div class="form-check text-start mb-4">
        <input class="form-check-input" type="checkbox" id="privacyCheckbox" onchange="toggleButton()">
        <label class="form-check-label" for="privacyCheckbox">
          Saya menyetujui <a href="/PrivacyPolicy" target="_blank">Privacy Policy</a>
        </label>
      </div>

      <!-- Tombol Login -->
      <a href="<%= googleLoginUrl %>" id="loginButton" class="btn btn-danger w-100 disabled">
        <i class="bi bi-google"></i> Silakan Login
      </a>
    </div>
  </div>

  <!-- Footer -->
  <%- include('../partials/footer') %>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>