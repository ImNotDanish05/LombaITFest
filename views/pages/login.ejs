<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Login - Judol App</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">

  <style>
    body {
      font-family: 'Inter', sans-serif;
      background: linear-gradient(to right,#0f2027, #203a43, #2c5364);
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }

    .login-box {
      max-width: 450px;
      margin: auto;
      padding: 40px;
      background-color: white;
      border-radius: 20px;
      box-shadow: 0 0 20px rgba(0,0,0,0.1);
    }

    .login-box h1 {
      font-weight: 700;
      margin-bottom: 30px;
    }

    #loginButton {
      transition: all 0.3s ease;
    }

    #loginButton.disabled {
      cursor: not-allowed;
      opacity: 0.6;
    }

    .form-check-label a {
      text-decoration: underline dotted;
    }

    footer {
      margin-top: auto;
    }
  </style>

  <script>
    function toggleButton() {
      const terms = document.getElementById('termsCheckbox').checked;
      const privacy = document.getElementById('privacyCheckbox').checked;
      const loginButton = document.getElementById('loginButton');

      if (terms && privacy) {
        loginButton.classList.remove('disabled');
        loginButton.onclick = null;
      } else {
        loginButton.classList.add('disabled');
        loginButton.onclick = function (e) {
          e.preventDefault();
        };
      }
    }

    window.onload = toggleButton;
  </script>
</head>
<body>

  <!-- Header -->
  <%- include('../partials/header') %>

  <div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="login-box text-center">
      <h1 class="mb-4">Login dengan Google</h1>

      <!-- Checkbox Terms -->
      <div class="form-check text-start mb-2">
        <input class="form-check-input" type="checkbox" id="termsCheckbox" onchange="toggleButton()">
        <label class="form-check-label" for="termsCheckbox">
          Saya menyetujui <a href="/TermsAndConditions" target="_blank">Terms & Conditions</a>
        </label>
      </div>

      <!-- Checkbox Privacy -->
      <div class="form-check text-start mb-4">
        <input class="form-check-input" type="checkbox" id="privacyCheckbox" onchange="toggleButton()">
        <label class="form-check-label" for="privacyCheckbox">
          Saya menyetujui <a href="/PrivacyPolicy" target="_blank">Privacy Policy</a>
        </label>
      </div>

      <!-- Tombol Login -->
      <a href="<%= googleLoginUrl %>" id="loginButton" class="btn btn-danger w-100 disabled">
        <i class="bi bi-google"></i> Silakan Login
      </a>
    </div>
  </div>

  <!-- Footer -->
  <%- include('../partials/footer') %>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
